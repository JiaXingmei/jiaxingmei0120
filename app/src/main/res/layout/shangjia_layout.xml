<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <CheckBox
        android:id="@+id/shangpin_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp" />

    <ImageView
        android:id="@+id/shangpin_img"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_margin="10dp"
        android:layout_toRightOf="@id/shangpin_checkbox"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/shangpin_text_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/shangpin_img"
        android:text="商品"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/shangpin_text_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/shangpin_text_name"
        android:layout_toRightOf="@id/shangpin_img"
        android:text="商品"
        android:textSize="18sp" />

</RelativeLayout>
